<div class="col-sm-8 col-md-5 col-lg-5 col-xl-4 collapse multi-collapse" id="chatbox">

    <div class="card">

        <div class="card-header d-flex justify-content-between align-items-center p-3">

            <h6 class="mb-0">Chat messages</h6>

            <div class="d-flex flex-row align-items-center">

                <span class="badge me-3" id="count">#</span>
                <button type="button" class="btn-close small" data-bs-toggle="collapse" data-bs-target="#chatbox"></button>
                <div><i id="type"></i></div>
            </div>

        </div>

        <div class="card-body p-0" data-mdb-perfect-scrollbar="true">
            <div id="messages" class="m-2 mb-5">
            </div>
            <div class="card-footer text-muted align-items-center mx-2 border">

                <form class="input-group mb-0" action="" id="message_form">
                    <input id="message_input" type="text" class="form-control" placeholder="Type message" />
                    <button class="btn btn-secondary" id="send_message">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>