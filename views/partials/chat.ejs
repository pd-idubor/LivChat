<div class="col-sm-6 col-md-5 col-lg-5 col-xl-4 border collapse multi-collapse" id="chatbox" style="position: fixed; bottom:0; right: 0;">

    <div class="card overflow-auto">

        <div class="card-header d-flex justify-content-between align-items-center p-3" style="background-color: #f5f6f7; border-top: 4px solid #008080; position:sticky; top:0; z-index: 2;">

            <h5 class="mb-0">Chat messages</h5>

            <div class="d-flex flex-row align-items-center">

                <span class="badge me-3" id="count" style="background-color: #008080;">#</span>
                <button type="button" class="btn-close" data-bs-toggle="collapse" data-bs-target="#chatbox"></button>
                <div style="font-size: x-small; position: absolute; left: 5%; bottom: 0; color: #008080;"><i id="type"></i></div>
            </div>

        </div>

        <div class="card-body" data-mdb-perfect-scrollbar="true" style="position: relative; height: 31em">
            <div id="messages">
            </div>
            <div class="card-footer text-muted d-flex justify-content-start align-items-center border" style="background-color: #f5f6f7; position:sticky; bottom:0; z-index: 2;">

                <form class="input-group mb-0" action="" id="message_form">
                    <input id="message_input" type="text" class="form-control" placeholder="Type message" />
                    <button class="btn btn-secondary" id="send_message">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>