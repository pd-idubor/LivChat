					</ul>
					</div>
					<aside class="text-muted d-block mb-2 small">Posted by <a href="#"><%= username %></a> at <%= createdAt %> time ago</aside>
					<p><%= post.content %></p>
					<div class="col-12">
						<hr>
					</div>
					</div>
					</div>
			</div>
		</div>
	</div>
    

